<!DOCTYPE html>
<html>
  <head>
    <title>Asobitweet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">Mapimage</a></h1>
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <div class="user-name">
            <% if user_signed_in? %>
            <%= current_user.nickname %><br/>
            <img src=<%= current_user.image %> class="icon_image">
            <% end %>
            </div>
              <ul class="user__info">
                <li>
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                  <%= link_to "マイページ", "/users/#{current_user.id}" %>
                  <%= link_to "ユーザー編集", edit_user_registration_path %>
                </li>
              </ul>
            </span>
            <%= link_to "投稿する", new_tweet_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
