<h2>ユーザー情報入力</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <img src=<%= current_user.image %> class="icon_image">
   <div class="form-group">
    <%= f.file_field :image,class:"image-default" %>
    <label class="form-image">
      <span class="image-file">プロフィール画像を選択</span>
      <input type="file" class="hidden">
    </label>
      
  </div>

  <div class="form-group">
    <%= f.label :"nickname" %><br/>
    <%= f.text_field :nickname,class:"input-default", placeholder: "ニックネーム" %>
  </div>

  <div class="form-group">
    <%= f.label :"自己紹介" %><br/>
    <%= f.text_area :introduction,class:"input-default", placeholder: "自己紹介" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password,class:"input-default", placeholder: "パスワード" %>
    <p class='info-text'>※英字と数字の両方を含めて8文字以上で設定してください</p>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, class:"input-default", placeholder: "パスワード(確認)" %>
  </div>

  <div class="actions">
    <input type="submit" value="完了" class="button">
  </div>
<% end %>

<%= render "devise/shared/links" %>
